@model List<Hotel_Management_API.DTO.RoomDTO>

<h2>Room List</h2>

<p>
    <a class="btn btn-outline-danger" href="/Admin/Room/Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>Type</th>
            <th>Status</th>
            <th>Floor</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomName</td>
                <td>@(room?.TypeName ?? "N/A")</td>
                <td>@(room?.StatusName ?? "N/A")</td>
                <td>@(room?.FloorName ?? "N/A")</td>
                <td>
                    <a class="btn btn-outline-danger" href="/Admin/Room/Details/@room.RoomId">Details</a> |
                    <a class="btn btn-outline-danger" href="/Admin/Room/Edit/@room.RoomId">Edit</a> |
                    @*<a class="btn btn-outline-danger" onclick="return confirm('Are you sure to delete');" asp-action="Delete" asp-route-id="@room.RoomId">Delete</a>*@
                    <form method="post" action="/Admin/Room/DeleteConfirmed/@room.RoomId">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Are you sure to delete');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
