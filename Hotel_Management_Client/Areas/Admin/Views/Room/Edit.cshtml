@model Hotel_Management_API.Models.Room

<h2>Edit Room</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="RoomId" />
        <label asp-for="RoomName" class="control-label"></label>
        <input asp-for="RoomName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TypeId" class="control-label"></label>
        <select asp-for="TypeId" asp-items="ViewBag.roomTypes" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="StatusId" class="control-label"></label>
        <select asp-for="StatusId" asp-items="ViewBag.status" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="FloorId" class="control-label"></label>
        <select asp-for="FloorId" asp-items="ViewBag.floors" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
